# Forex Trader Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3000

# JWT Authentication (REQUIRED in production)
# Generate a secure random string: openssl rand -base64 32
JWT_SECRET=your-secure-secret-key-here
JWT_EXPIRY=24h
REFRESH_EXPIRY=7d

# Default password for initial setup (change immediately in production)
DEFAULT_PASSWORD=changeme123

# CORS Configuration (comma-separated list of allowed origins)
# Example: https://myapp.railway.app,https://myapp.com
ALLOWED_ORIGINS=

# Database Path (optional, defaults to ./data/forex.db)
DATABASE_PATH=

# Trading Mode
# SIMULATION = No broker connection, simulated trades
# PAPER = IB Gateway paper trading account
# LIVE = IB Gateway live trading (requires ALLOW_LIVE_TRADING=true)
TRADING_MODE=SIMULATION

# Interactive Brokers Configuration
# IB_HOST: Use localhost for local IB Gateway, or container hostname for Docker
IB_HOST=localhost
# IB_PORT: 7497 = TWS Paper, 7496 = TWS Live, 4002 = Gateway Paper, 4001 = Gateway Live
IB_PORT=7497
IB_CLIENT_ID=1

# Safety: Must be explicitly enabled for live trading
ALLOW_LIVE_TRADING=false

# Forex API (optional, for live rates)
FOREX_API_KEY=

# Frontend API URL (for Vite builds)
# Leave empty if frontend and backend are served from same origin (default)
# Only set if hosting frontend separately from API server
VITE_API_URL=
